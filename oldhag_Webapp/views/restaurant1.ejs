    <% include partials/_userHeader %>
    <div class="slider-section">
      <div
        id="carouselExampleControls"
        class="carousel slide"
        data-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              src="/css/images/ramen1.png"
              alt="the-buzz-img3"
              style="width:100%; height:500px; top:150px"
            />
          </div>
          <div class="carousel-item">
            <img
              class="d-block w-100"
              src="/css/images/ramen2.png"
              alt="Second slide"
              style="width:100%; height:500px; top: 150px"
            />
          </div>
          <div class="carousel-item">
            <img
              class="d-block w-100"
              src="/css/images/ramen3.png"
              alt="Third slide"
              style="width:100%; height:500px; top: 150px"
            />
          </div>
        </div>
        <a
          class="carousel-control-prev"
          href="#carouselExampleControls"
          role="button"
          data-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a
          class="carousel-control-next"
          href="#carouselExampleControls"
          role="button"
          data-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <main>
      <div class="main-menu">
        <div class="basket">
          <div class="basket-labels">
            <table>
              <tr class="animated duration-5s fadeInUp">
                <th class="item-heading">Item</th>
                <th class="price">Price</th>
                <th class="quantity ">Quantity</th>
                <th class="subtotal">Subtotal</th>
              </tr>
              <form id="userorderdetails" method="post" action="/payment">
                <div class="basket-product">
                  <% for (let item of Object.values(items)) { %>
                  <tr class="food-table">
                    <td class="name-description">
                      <input
                        type="hidden"
                        name="item-id"
                        value="<%= item.id %>"
                      />
                      <input
                        type="hidden"
                        name="restaurant-id"
                        value="<%= item.restaurant_id %>"
                      />
                      <div class="food-item">
                        <%= item.name %>
                        <input
                          type="hidden"
                          name="item-name"
                          value="<%= item.name %>"
                        />
                      </div>
                      <div class="food-description">
                        <%= item.description %>
                      </div>
                      <span
                        style="left: 166px; right: 44px;"
                        class="menu-line"
                      ></span>
                    </td>

                    <td class="table-price">
                      <div class="item-price">
                        <%= (item.price/100).toFixed(2) %>
                        <input
                          type="hidden"
                          name="item-price"
                          value="<%= item.price/100 %>"
                        />
                      </div>
                    </td>

                    <td class="table-quantity">
                      <div class="quantity">
                        <input
                          type="number"
                          value="0"
                          min="0"
                          class="quantity-field"
                          name="item-quantity"
                        />
                      </div>
                    </td>

                    <td class="table-subtotal">
                      <div class="item-subtotal">0</div>
                    </td>
                    <% } %>
                  </tr>
                </div>
              </form>
            </table>
          </div>
        </div>

        <div id="checkout-summary">
          <div
            class="container animated duration-5s fadeInRight"
            id="small-checkout"
          >
            <aside>
              <div class="summary ">
                <i class="fa fa-shopping-cart"></i> Summary Checkout
                <div class="summary-total-items">
                  <span class="total-items"></span> Items in your Bag
                </div>

                <div class="summary-subtotal">
                  <div class="subtotal-title">Subtotal</div>
                  <div class="subtotal-value final-value" id="basket-subtotal">
                    0.00
                  </div>
                </div>
                <div class="summary-tax">
                  <div class="tax-title">Tax</div>
                  <div class="tax-value final-value " id="basket-tax">
                    0.00
                  </div>
                </div>

                <div class="summary-total">
                  <div class="total-title">Total</div>
                  <div class="total-value final-value" id="basket-total">
                    0.00
                  </div>
                </div>
                <div
                  class="summary-checkout"
                  id="completeOrd"
                  style="display: none"
                >
                  <p>Order Has Been Placed</p>
                  <input
                    type="submit"
                    form="userorderdetails"
                    class="checkout-cta btn btn-outline-success"
                    value="Go To Orders!"
                  />
                </div>
                <div id="checkout">
                  <button class="btn btn-outline-secondary" id="buyButton">
                    Checkout
                  </button>
                </div>
              </div>
            </aside>
          </div>
          <div id="map" class="animated duration-5s fadeInRight"></div>
        </div>
      </div>
    </main>
  </body>

