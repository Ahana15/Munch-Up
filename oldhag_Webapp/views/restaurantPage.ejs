<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <!--Import materialize.css-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />

    <!-- App CSS -->
    <!-- <link rel="stylesheet" href="/css/restaurantMenu.css" type="text/css" /> -->

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- External CSS -->
    <link rel="stylesheet" href="/vendor/normalize-8.0.1.css" type="text/css" />

    <!-- External JS -->
    <script
      src="https://code.jquery.com/jquery-3.4.1.min.js"
      integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
      crossorigin="anonymous"
    ></script>

    <script type="text/javascript" src="/scripts/restauranthistory.js"></script>

    <title>Soy Ramentic</title>
  </head>

  <body>
    <% include partials/_homeHeader %>

    <ul class="sidenav" id="mobile-nav">
      <li>
        <a href="#home">Home</a>
      </li>

      <li>
        <a href="#menu">Menu</a>
      </li>
      <li>
        <a href="#order">Order Now</a>
      </li>
    </ul>

    <h2>Unaccepted Orders</h2>
    <% for (let order of orders) { %> <% if (order[0].status === "Not Accepted")
    { %>
    <div>
      <button class="btn btn-default food-list">
        <%=order[0].user_order%>
      </button>
      <div id="<%=order[0].user_order%>">
        <div><%= order[0].created_at %></div>
        <form id="twilio" method="post" action="/restaurantpage">
          <div>
            <input type="text" name="time" value="10" />
            <input
              type="hidden"
              name="order_id"
              value="<%= order[0].user_order%>"
            />
            <button type="submit" id="itemsubmission">Submit</button>
          </div>
        </form>
        <% for (let item of order) { %>
        <div><%= item.item_name %> : <%= item.quantity %></div>
        <% } %>
      </div>
    </div>
    <% }} %>

    <h2>Accepted Orders</h2>
    <% for (let order of orders) { %> <% if (order[0].status === "Accepted - In Progress")
    { %>
    <div>
      <button class="btn btn-default food-list">
        <%=order[0].user_order%>
      </button>
      <div id="<%=order[0].user_order%>">
        <div><%= order[0].created_at %></div>
        <form id="twiliocomplete" method="post" action="/restaurantpage">
          <input
            type="hidden"
            name="completed_order_id"
            value="<%= order[0].user_order%>"
          />
          <button type="submit" id="itemsubmission">Complete</button>
        </form>
        <% for (let item of order) { %>
        <div><%= item.item_name %> : <%= item.quantity %></div>
        <% } %>
      </div>
    </div>
    <% }} %>


    <h2>Completed Orders</h2>
    <% for (let order of orders) { %> <% if (order[0].status === "Completed")
    { %>
    <div>
      <button class="btn btn-default food-list">
        <%=order[0].user_order%>
      </button>
      <div id="<%=order[0].user_order%>">
        <div><%= order[0].created_at %></div>
        <% for (let item of order) { %>
        <div><%= item.item_name %> : <%= item.quantity %></div>
        <% } %>
      </div>
    </div>
    <% }} %>

  </body>

  <!--JavaScript at end of body for optimized loading-->
  <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script> -->

  <script type="text/javascript" src="/scripts/restauranthistory.js"></script>
</html>
