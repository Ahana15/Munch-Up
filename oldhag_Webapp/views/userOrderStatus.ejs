​
<body>
  <% include partials/_otherHeader %>
  <span class="page-header"><i class="fa fa-history"></i>
    <h4>Your Past Orders <h4></h4>
  </span>
​
  <div>
    <% for (let order of orders){ %>
​
    <div>
      <button class="btn btn-outline-info food-list">
        <%=order[0].user_order%>
      </button>
    </div>
    <div class="order-info" id="<%=order[0].user_order%>">
      <div class="order restaurant"><%=order[0].restaurant_name%></div>
      <div class="order created_at"><%=order[0].created_at%></div>
      <div class="order status"><%= order[0].status%></div>
      <% for (let item of order){ %>
      <li class="order itemsQuants"><%=item.item_name%> : <%=item.quantity%></li>
      <% } %>
    </div>
  </div>
  <% } %>
</body>

<script type="text/javascript" src="/scripts/userorderstatus.js"></script>
